<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/style.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Doctor Dashboard</title>
    <style>
      table {
          border-collapse: collapse;
          width: 100%;
      }
  
      th, td {
          border: 1px solid #ddd;
          padding: 8px;
          text-align: left;
      }
  
      tr:nth-child(even) {
          background-color: #f2f2f2;
      }
  
      th {
          background-color: #4CAF50;
          color: white;
      }
  </style>
  
  </head>
  <body>
    <nav class="navbar  navbar-expand-lg navbar-light bg-secondary">
      <div class="container-fluid">
        <a class="navbar-brand nav-link" id="index" href="#">PrajRon</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" id="index" aria-current="page" href="index">Home</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <h1>Doctor Dashboard</h1>

    <% if (patientData && patientData.length > 0) { %>
        <table>
            <tr>
                <th>Patient Name</th>
                <th>Patient Email</th>
                <th>Doctor</th>
                <th>Date</th>
                <th>Problem</th>
            </tr>
            <% patientData.forEach(patient => { %>
                <tr>
                    <td><%= patient.patientname %></td>
                    <td><%= patient.patientemail %></td>
                    <td><%= patient.patientdoctor %></td>
                    <td><%= patient.patientdate %></td>
                    <td><%= patient.patientproblem %></td>
                </tr>
            <% }) %>
        </table>
    <% } else { %>
        <p>No patient data available.</p>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>
</html>
