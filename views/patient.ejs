    <br>

    <form class="form" method="post" action="/pbook"  style="border-radius: 1%;">
      <legend>Book Your Appointment</legend>
      <div class="form-group col-md ">
        <label for="exampleInputName" >Name</label>
        <input type="text"  name="pname" id="pname" class="form-control" placeholder="Full Name" id="exampleInputName" aria-describedby="nameHelp" required>
      </div>
      <hr>
      <div class="form-group ">
        <label for="exampleFormControlInput1">Email address</label>
        <input type="email" name="pemail" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" required>
      </div>
      <hr>
      <div class="form-group col-md-4">
        <label for="pdoctor">Doctor</label>
        <select id="pdoctor" name="pdoctor" class="form-control" required>
          <option selected>Choose the doctor you want me consult</option>
          <option>Dr Ravindra</option>
          <option>Dr Akash</option>
          <option>Dr Melvin</option>
        </select>
      </div>
      <hr>
      <div class="form-group">
        <label for="date">Enter Date:</label>
    <input type="date" name="date" class="form-control" id="date" required>
      </div>
      <hr>
      <div class="form-group col-md">
        <label for="pphone">Phone</label>
        <input type="phone" class="form-control" name="pphone" id="pphone" placeholder="Phone Number" required>
      </div>
      <hr>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Explain your problem</label>
        <textarea class="form-control" name="pproblem" placeholder="Explain your in few words" id="exampleFormControlTextarea1" rows="3" required></textarea>
      </div>
      <hr>
      <button type="submit"  style="width:100%;" class="btn btn-secondary col-md">Submit</button>
    </form>

    <hr>
    <footer>
      <!-- Replace the contact information with your own -->
      <p><em>  </em>     Contact Us:</p>
      <p><em>></em>    Email: contact@example.com</p>
      <p><em>></em>    Phone: (123) 456-7890</p>
      <div class="rights">@All rights reserved</div>


  </footer>
    


    <script>
      document.getElementById('index').addEventListener('click', function() {
      // Perform a GET request to the /patient URL when the button is clicked
      fetch('/index')
          .then(response => response.text())
          .then(data => {
              // Replace the current page content with the patient page content
              document.body.innerHTML = data;
          })
          .catch(error => {
              console.error('Error:', error);
          });
  });
  </script>
